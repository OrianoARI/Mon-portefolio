{% extends "base.twig" %}
{% block link %}
	<link rel="stylesheet" href="css/projects_style.css">
{% endblock %}

{% block main %}
<div class="carousel-body">
	<div class="carousel">
		<div<strong class="carousel__scene" {% if projectCount >= 1 and projectCount <= 5 %} style = "top: -40vh" {% elseif projectCount > 5 and projectCount < 15 %}  style = "top: -30vh" {% elseif projectCount > 15 and projectCount < 20 %} style = "top: -10vh" {% else %} style = "top: -8vh"{% endif %}> <div class="carousel__list"> <p>{{projects.project}}</p> {% for project in projects %} <div class="carousel__cell"> <div class="datas"> <p>Titre:</strong>
		{{project.title}}</p>
	<p class="link" onclick="window.location.href='{{project.url}}'">
		<strong>Lien:</strong>
		{{project.url}}</p>
	<p class="link" onclick="window.location.href='{{project.gitUrl}}'">
		<strong>Lien GitHub:</strong>
		{{project.gitUrl}}</p>
</div>
<div class="description">
	<p>
		<strong>Description:</strong>
		{{project.description}}</p>
</div>
<div class="tech">
	{% for tech in [project.techOne, project.techTwo, project.techThree, project.techFour] %}
		{% if tech == 'html' %}
			<i class="fa-solid fa-code fa-xl" style="color: #ff5005;"></i>
		{% elseif tech == 'css' %}
			<i class="fa-solid fa-hashtag fa-xl" style="color: #2969ff;"></i>
		{% elseif tech == 'js' %}
			<i class="fa-brands fa-js fa-xl" style="color: #ffe229;"></i>
		{% elseif tech == 'php' %}
			<i class="fa-brands fa-php fa-xl" style="color: #8b2acb;"></i>
		{% elseif tech == 'twig' %}
			<img class= "ico" src="/ico/twiglogo.png" alt="">
			{% elseif tech == 'node' %}
			<img class= "ico" src="/ico/nodelogo.png" alt="">
		{% else %}
			<p>{{ tech }}</p>
		{% endif %}
	{% endfor %}
	{# <p>{{project.techOne}}</p>
																																																																		<p>{{project.techTwo}}</p>
																																																																		<p>{{project.techThree}}</p>
																																																																		<p>{{project.techFour}}</p> #}
</div>
<img class="project-img" src="/uploads/{{project.image}}"></div><div>
<p>{{project.tech}}</p></div>{% endfor %}</div></div></div></div>{% endblock %}{% block scriptJs %}<script src="/js/projects.js"></script>{% endblock %}
